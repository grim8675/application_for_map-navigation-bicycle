<?xml version="1.0" encoding="utf-8"?>
<!--충남 공주-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:id="@+id/kyungnam_yangsan_pop"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="자전거 이용방법" />
        <TextView
            android:id="@+id/textView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="1. 자전거 대여버튼 선택\n 2. 1일 이용권 가입\n3. 가입비 결제\n4. 대여할 자전거 선택\n5. 보관대의 대여버튼 클릭\n6. 자전거 이용" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="관련페이지 url" />

        <TextView
            android:id="@+id/textView_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:linksClickable="true"
            android:autoLink="web"
            android:text="http://ubike.yangsan.go.kr/index.do"/>

    </LinearLayout>
</ScrollView>