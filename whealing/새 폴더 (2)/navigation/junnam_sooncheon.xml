<?xml version="1.0" encoding="utf-8"?>
<!--충남 공주-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:id="@+id/junnam_sooncheon_pop"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="자전거 이용방법" />
        <TextView
            android:id="@+id/textView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="온누리 터미널은 순천시 총 22곳에 설치되어 운영하고 있으며, 자전거의 대여/반납이 무인으로 이루어지는 공간으로 키오스크를 통하여 주변 터미널 정보를 확인할 수 있습니다.\n1.터미널 키오스크 방문\n2. 1일 이용권 가입(휴대폰 소액결제)\n3. 인증번호 입력\n4. 자전거 선택 후 이용" />


        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="관련페이지 url" />

        <TextView
            android:id="@+id/textView_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:linksClickable="true"
            android:autoLink="web"
            android:text="https://www.suncheon.go.kr/tour/guide/0002/0007/0002/"/>

    </LinearLayout>
</ScrollView>