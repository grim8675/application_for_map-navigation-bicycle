<?xml version="1.0" encoding="utf-8"?>
<!--경기도 수원시-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="30dp"
        android:id="@+id/gyoengi_suwon_pop"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/textView_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="회원가입" />
        <TextView
            android:id="@+id/textView_22"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="무인대여 자전거 앱('공유 자전거'로 검색) 다운로드(Play store, App store활용)\n휴대전화번호를 사용한 회원가입\n※ 사업자별로 요금체계 및 어플리케이션 다름" />


        <TextView
            android:id="@+id/textView_"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="자전거 이용방법" />
        <TextView
            android:id="@+id/textView_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="① 앱 실행 및 나와 주변 자전거 위치 검색\n② QR코드 스캔으로 자전거 잠금해제 및 대여시작\n③ 목적지까지 자유롭게자전거 이용\n④ 전용주차구역 주차 후 잠금장치를 밀어잠금" />
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="관련페이지 url" />

        <TextView
            android:id="@+id/textView_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:linksClickable="true"
            android:autoLink="web"
            android:text="https://m.suwon.go.kr/cycle/selectCycleExplain.do"/>

    </LinearLayout>
</ScrollView>